    <form id="myForm">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-9">
                <input name="last_name" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Prénom</label>
            <div class="col-sm-9">
